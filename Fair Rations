char* fairRations(int B_count, int* B) {
    static char result[16]; 
    int breads = 0;
    for (int i = 0; i < B_count - 1; i++) {
        if (B[i] % 2 != 0) {
            B[i]++;
            B[i + 1]++;
            breads += 2;
        }
    }
    if (B[B_count - 1] % 2 != 0) {
        
        return "NO";
    }
    else {
        snprintf(result, sizeof(result), "%d", breads);
        return result;
    }
}
